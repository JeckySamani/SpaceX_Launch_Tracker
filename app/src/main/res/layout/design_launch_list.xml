<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        android:elevation="7dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="7.5dp">
        <LinearLayout
            android:id="@+id/loutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/selector_effect_white">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardElevation="0dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_placeholder"
                    android:contentDescription="@null"/>
            </androidx.cardview.widget.CardView>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp">
                
                <com.app.assignment.customview.TextViewMedium
                    android:id="@+id/tvMissionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mission_name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:singleLine="true"/>

                <com.app.assignment.customview.TextViewRegular
                    android:id="@+id/tvLaunchYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="launch_year"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"/>

                <com.app.assignment.customview.TextViewRegular
                    android:id="@+id/tvRocketName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rocket_name"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>
            
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>